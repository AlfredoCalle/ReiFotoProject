  <body>

    <div class="container-post-login  d-flex align-items-center justify-content-center  alto-100">
      <div class="row">
        <!--Imagen-->
        <div class="col-12 col-md-7  novisible">
          <div class="row justify-content-center">

            <div class="col-8 d-flex justify-content-center ">
              <div class="card" style="width: 24rem;">
