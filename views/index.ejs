<!DOCTYPE html>
<html>
  
  <head>
    <title>ReiFoto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

  </head>

  <body>

    <!--Navegacion-->
    <div class="container-navegacion">
      <div class="row">
        <div class="col-4 border">
          <h1>ReiFoto</h1>
          <p>Rey y reina de las fotos</p>
        </div>
        <div class="col-8 border">
          <p>Navegacion</p>
        </div>
      </div>
    </div>


    
    <!--Publicaciones-->
    <div class="container-publicaciones">
      <div class="row justify-content-center">
        <% if (publicaciones.length > 0) { %>

          <% publicaciones.forEach(function(publicacion){ %>
            <div class="col-12 col-md-8 d-flex justify-content-center border">
              <div class="card" style="width: 24rem;">
                <h5 class="card-title">Usuario: <a href=""><%= publicacion.usuarioID.nombre %></a> </h5>
                <img src="http://localhost:3000/images/<%= publicacion.imagen %>" class="card-img-top" alt="">
                <div class="card-body">
                  <p><b>Likes: <%= publicacion.likes %> </b></p>
                  <p class="card-text"><%= publicacion.descripcion %></p>
                </div>
              </div>
            </div>
          <% }); %>

        <% } %>
      </div>
    </div>

  </body>

</html>
